			<section>
				<h2>Sign Up</h2>
				<article>
					<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
						<%= devise_error_messages! %>
						<p>
							<%= f.label :first_name %><br />
							<%= f.text_field :first_name, required: true, autofocus: true %>
						</p>
						<p>
							<%= f.label :last_name %><br />
							<%= f.text_field :last_name, required: true %>
						</p>
						<p>
							<%= f.label :email %><br />
							<%= f.email_field :email, required: true %>
						</p>
						<p>
							<%= f.label :password %><br />
							<%= f.password_field :password, autocomplete: "off", required: true %>
						</p>
						<p>
							<%= f.label :password_confirmation %><br />
							<%= f.password_field :password_confirmation, autocomplete: "off", required: true %>
						</p>
						<p><%= f.submit "Sign Up", :class => "button button-okay" %></p>
					<% end %>
					<p>Alternatively, you might want to:</p>
					<p>
						<%= link_to "Sign In", new_session_path(resource_name), :class => "button button-neutral" %>
						<%= link_to "Forgot Password?", new_password_path(resource_name), :class => "button button-neutral" %>
					</p>
				</article>
			</section>